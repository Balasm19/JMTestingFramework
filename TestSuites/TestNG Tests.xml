<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TestNG Test Suite" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="bala.TestComponents.Listeners"/>
    </listeners>

    <test name="Add To Cart Functionality Test">
        <classes>
            <class name="bala.Tests.AddToCartFunctionalityTest"/>
        </classes>
    </test>
    <test name="Cart Functionality Test">
        <classes>
            <class name="bala.Tests.CartFunctionality"/>
        </classes>
    </test>
    <test name="Error Validations Test">
        <classes>
            <class name="bala.Tests.ErrorValidations"/>
        </classes>
    </test>
    <test name="Navigation And Sort Functionality Test">
        <classes>
            <class name="bala.Tests.NavigationAndSortFunctionality"/>
        </classes>
    </test>
    <test name="Total Cart Value Functionality Test">
        <classes>
            <class name="bala.Tests.TotalCartValueFunctionality"/>
        </classes>
    </test>
    <test name="UI and Behavior Validations Test">
        <classes>
            <class name="bala.Tests.UIBehaviorValidations"/>
        </classes>
    </test>
</suite>